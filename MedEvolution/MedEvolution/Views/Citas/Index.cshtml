@model IEnumerable<MedEvolution.Models.Cita>

@{
    ViewBag.Title = "Index";
}

<h2>Gestionar Citas</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdCita)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaCita)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoraCita)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Causa)
        </th>
        <th>
            @Html.DisplayName("Médico")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraCita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Causa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medico.Nombre)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdCita }, new { @class = "glyphicon glyphicon-pencil" }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdCita }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdCita })
            </td>
        </tr>
    }

</table>

